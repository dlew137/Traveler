      { name: "America", image: "https://th.bing.com/th/id/R.ac1bef4e3ab8772e9d47ff5fed9fa3bc?rik=%2bsQ7936r6XJdSw&riu=http%3a%2f%2fwww.jcda.net%2fwp-content%2fuploads%2f2015%2f08%2fadventure-park-3.jpg&ehk=xBz6wYX2JEzUaMuq3tp3OhkqOxj07O50k3OjfKjjENY%3d&risl=&pid=ImgRaw&r=0", bio: "Musician and traveler." },
