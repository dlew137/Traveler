    const profiles = [
      { name: "Do you prefer a tropical or chilly  climate", image: "https://cdn1.iconfinder.com/data/icons/cool-weather-designs-1/744/Thermometer_Weather_Icon-512.png", bio: "Hot or Cold" },
    
