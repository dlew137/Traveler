  const endCards = [
  { name: "Hawaii", image: "https://via.placeholder.com/100", bio: "For YOU" },
  ];

      

  function swipeLeft() {
      const card = document.querySelector('.card');
      card.style.transform = 'translateX(-300px)';
      setTimeout(() => {
        currentIndex++;
        noCount++;
        renderCard();
      }, 300);
    }

    function swipeRight() {
      const card = document.querySelector('.card');
      card.style.transform = 'translateX(300px)';
      setTimeout(() => {
        currentIndex++;
        yesCount++;
        renderCard();
      }, 300);
    }

  
    let currentIndex = 0;
    let yesCount = 0;
    let noCount =0;
    
    const cardContainer = document.querySelector('.card-container');
    

    function createCard(profile) {
      const card = document.createElement('div');
      card.classList.add('card');
      
      card.innerHTML = `
        <img src="${profile.image}" alt="${profile.name}">
        <h3>${profile.name}</h3>
        <p>${profile.bio}</p>
        <div class = "buttons">
          <button class="button" onclick="swipeLeft()">Like</button>
          <button class="button" onclick="swipeRight()">Nope</button>
        </div> 
      `;
      
      return card;
    }

    function renderCard() {
      if (currentIndex < profiles.length) {
        cardContainer.innerHTML = '';
        const profile = profiles[currentIndex];
        const card = createCard(profile);
        cardContainer.appendChild(card);
      } else {
        cardContainer.innerHTML =  '';
        if(yesCount > noCount) {

            cardContainer.innerHTML = '';
        const profile = profiles[currentIndex];
        const card = createCard(profile);
        cardContainer.appendChild(card);
            // const proflies [
            //  {name: "Hawaii is your desired destination", image: "https://via.placeholder.com/100", bio: "Musician and traveler." },
            //  ];
    
            // cardContainer.innerHTML = `
        // <div class="card">
